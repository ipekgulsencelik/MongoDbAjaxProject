@model List<Category>

@{
    Layout = "~/Views/Shared/_MongoLayout.cshtml";
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <h3>Kategori Listesi</h3>
    <br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori ID</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td><a asp-action="DeleteCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                <td><a asp-action="UpdateCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <br />
    <a asp-action="CreateCategory" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
</div>